@page "{id}"
@model ShopAppUI.Pages.Items.EditModel
@{
    ViewData["Title"] = "Edit the item";
    var imagePath = "";
    imagePath = @"..\..\images\";
}
<div class="container">
    <h4 class="text-center">@ViewData["Title"]</h4>
    <img src="@(imagePath+Model.Item.itemViewModel.Image)" class="img-fluid" alt="Items image" width="100">
    <partial name="_ShopItemCreatePartial" model="Model.Item" />
</div>