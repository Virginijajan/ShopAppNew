@page
@model IndexModel
@{
    ViewData["Title"] = "Shop";
}
<div class="container">
    <h4>Shop</h4>
    <ul class="list-group">
        @foreach (var category in Model.Categories)
        {
            <li class="list-group-item">
                <div class="row bg-light p-1">
                    <div class="col m-3 p-1" style="font-size:larger"> @category.Name</div>
                    <div class="col m-3"> <a class="btn btn-success float-right" href="\Items\List\@category.Id">Items</a></div>
                </div>
            </li>
        }
        <li class="list-group-item">
            <div class="row bg-light p-1">
                <div class="col m-3 p-1" style="font-size:larger">All shop items</div>
                <div class="col m-3"> <a class="btn btn-success float-right" href="\Items\AllItems\">Items</a></div>
            </div>
        </li>
    </ul>
</div>
